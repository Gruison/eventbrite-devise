<%= form_for @participation, url: {action: "create"} do |f| %>
   
  
    <%= f.fields_for :user, current_user do |builder| %>
      <fieldset>
        <%= builder.label :email, "Email" %><br />
        <%= builder.text_field :email %><br />
      </fieldset>
    <% end %>
  
    <%= f.submit "Register" %>
  <% end %>